<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.filipmarkiewicz.asystentkierowcy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RefuelingActivity" />
        <activity android:name=".AboutVehicleActivity">
            <intent-filter>
                <action android:name="pl.filipmarkiewicz.asystentkierowcy.intent.action.InvokeAboutVehicle" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ManageAboutVehicleDataActivity" />
        <activity android:name=".ManageRefuelingActivity" />
        <activity android:name=".RepairsActivity" />
        <activity android:name=".ManageRepairActivity"></activity>
    </application>

</manifest>